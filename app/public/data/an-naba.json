{
  "id": 78,
  "revelation_place": "makkah",
  "revelation_order": 80,
  "bismillah_pre": true,
  "name_simple": "An-Naba",
  "name_complex": "An-Naba",
  "name_arabic": "النبإ",
  "verses_count": 40,
  "pages": [
    582,
    583
  ],
  "slug": {
    "slug": "an-naba",
    "locale": "en"
  },
  "translated_name": {
    "language_name": "indonesian",
    "name": "Berita Besar"
  },
  "verses": [
    {
      "id": 5673,
      "verse_number": 1,
      "verse_key": "78:1",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": " عَمَّ يَتَسَآءَلُونَ",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180661,
          "resource_id": 33,
          "text": "Tentang apakah mereka saling bertanya-tanya?"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5674,
      "verse_number": 2,
      "verse_key": "78:2",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "عَنِ ٱلنَّبَإِ ٱلْعَظِيمِ",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 182632,
          "resource_id": 33,
          "text": "Tentang berita yang besar (hari berbangkit),"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5675,
      "verse_number": 3,
      "verse_key": "78:3",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ٱلَّذِى هُمْ فِيهِ مُخْتَلِفُونَ",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180479,
          "resource_id": 33,
          "text": "yang dalam hal itu mereka berselisih."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5676,
      "verse_number": 4,
      "verse_key": "78:4",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "كَلَّا سَيَعْلَمُونَ",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180695,
          "resource_id": 33,
          "text": "Tidak!<sup foot_note=135843>1</sup> Kelak mereka akan mengetahui,"
        }
      ],
      "foot_notes": [
        {
          "foot_note": {
            "id": 135843,
            "text": "* Sanggahan terhadap pendapat orang-orang kafir Mekkah yang mengingkari hari berbangkit dan hari Kiamat.",
            "language_name": "indonesian",
            "language_id": 67
          }
        }
      ]
    },
    {
      "id": 5677,
      "verse_number": 5,
      "verse_key": "78:5",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ثُمَّ كَلَّا سَيَعْلَمُونَ",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180701,
          "resource_id": 33,
          "text": "sekali lagi tidak! Kelak mereka akan mengetahui."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5678,
      "verse_number": 6,
      "verse_key": "78:6",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "أَلَمْ نَجْعَلِ ٱلْأَرْضَ مِهَـٰدًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180703,
          "resource_id": 33,
          "text": "Bukankah Kami telah menjadikan bumi sebagai hamparan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5679,
      "verse_number": 7,
      "verse_key": "78:7",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَٱلْجِبَالَ أَوْتَادًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 181882,
          "resource_id": 33,
          "text": "dan gunung-gunung sebagai pasak?"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5680,
      "verse_number": 8,
      "verse_key": "78:8",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَخَلَقْنَـٰكُمْ أَزْوَٰجًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180705,
          "resource_id": 33,
          "text": "Dan Kami menciptakan kamu berpasang-pasangan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5681,
      "verse_number": 9,
      "verse_key": "78:9",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَجَعَلْنَا نَوْمَكُمْ سُبَاتًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180707,
          "resource_id": 33,
          "text": "dan Kami menjadikan tidurmu untuk istirahat,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5682,
      "verse_number": 10,
      "verse_key": "78:10",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَجَعَلْنَا ٱلَّيْلَ لِبَاسًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180672,
          "resource_id": 33,
          "text": "dan Kami menjadikan malam sebagai pakaian,<sup foot_note=135844>1</sup>"
        }
      ],
      "foot_notes": [
        {
          "foot_note": {
            "id": 135844,
            "text": "* Malam itu disebut sebagai \"pakaian\" karena malam itu gelap menutupi jagat sebagaimana pakaian menutupi tubuh manusia.",
            "language_name": "indonesian",
            "language_id": 67
          }
        }
      ]
    },
    {
      "id": 5683,
      "verse_number": 11,
      "verse_key": "78:11",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَجَعَلْنَا ٱلنَّهَارَ مَعَاشًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180662,
          "resource_id": 33,
          "text": "dan Kami menjadikan siang untuk mencari penghidupan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5684,
      "verse_number": 12,
      "verse_key": "78:12",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَبَنَيْنَا فَوْقَكُمْ سَبْعًا شِدَادًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180663,
          "resource_id": 33,
          "text": "dan Kami membangun di atas kamu tujuh (lapis langit) yang kokoh,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5685,
      "verse_number": 13,
      "verse_key": "78:13",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَجَعَلْنَا سِرَاجًا وَهَّاجًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180664,
          "resource_id": 33,
          "text": "dan Kami menjadikan pelita yang terang-benderang (matahari),"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5686,
      "verse_number": 14,
      "verse_key": "78:14",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَأَنزَلْنَا مِنَ ٱلْمُعْصِرَٰتِ مَآءً ثَجَّاجًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180665,
          "resource_id": 33,
          "text": "dan Kami turunkan dari awan, air hujan yang tercurah dengan lebatnya,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5687,
      "verse_number": 15,
      "verse_key": "78:15",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لِّنُخْرِجَ بِهِۦ حَبًّا وَنَبَاتًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180666,
          "resource_id": 33,
          "text": "untuk Kami tumbuhkan dengan air itu biji-bijian dan tanam-tanaman,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5688,
      "verse_number": 16,
      "verse_key": "78:16",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَجَنَّـٰتٍ أَلْفَافًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180667,
          "resource_id": 33,
          "text": "dan kebun-kebun yang rindang."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5689,
      "verse_number": 17,
      "verse_key": "78:17",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ يَوْمَ ٱلْفَصْلِ كَانَ مِيقَـٰتًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180668,
          "resource_id": 33,
          "text": "Sungguh, hari keputusan adalah suatu waktu yang telah ditetapkan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5690,
      "verse_number": 18,
      "verse_key": "78:18",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَ يُنفَخُ فِى ٱلصُّورِ فَتَأْتُونَ أَفْوَاجًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180669,
          "resource_id": 33,
          "text": "(yaitu) pada hari (ketika) sangkakala ditiup, lalu kamu datang berbondong-bondong,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5691,
      "verse_number": 19,
      "verse_key": "78:19",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَفُتِحَتِ ٱلسَّمَآءُ فَكَانَتْ أَبْوَٰبًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180670,
          "resource_id": 33,
          "text": "dan langit pun dibukalah, maka terdapatlah beberapa pintu,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5692,
      "verse_number": 20,
      "verse_key": "78:20",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَسُيِّرَتِ ٱلْجِبَالُ فَكَانَتْ سَرَابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180683,
          "resource_id": 33,
          "text": "dan gunung-gunungpun dijalankan sehingga menjadi fatamorgana."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5693,
      "verse_number": 21,
      "verse_key": "78:21",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ جَهَنَّمَ كَانَتْ مِرْصَادًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180673,
          "resource_id": 33,
          "text": "Sungguh, (neraka) Jahanam itu (sebagai) tempat mengintai (bagi penjaga yang mengawasi isi neraka),"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5694,
      "verse_number": 22,
      "verse_key": "78:22",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لِّلطَّـٰغِينَ مَـَٔابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180674,
          "resource_id": 33,
          "text": "menjadi tempat kembali bagi orang-orang yang melampaui batas."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5695,
      "verse_number": 23,
      "verse_key": "78:23",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لَّـٰبِثِينَ فِيهَآ أَحْقَابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180675,
          "resource_id": 33,
          "text": "Mereka tinggal di sana dalam masa yang lama,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5696,
      "verse_number": 24,
      "verse_key": "78:24",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لَّا يَذُوقُونَ فِيهَا بَرْدًا وَلَا شَرَابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180676,
          "resource_id": 33,
          "text": "mereka tidak merasakan kesejukan di dalamnya dan tidak (pula mendapat) minuman,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5697,
      "verse_number": 25,
      "verse_key": "78:25",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِلَّا حَمِيمًا وَغَسَّاقًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180677,
          "resource_id": 33,
          "text": "selain air yang mendidih dan nanah,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5698,
      "verse_number": 26,
      "verse_key": "78:26",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "جَزَآءً وِفَاقًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180679,
          "resource_id": 33,
          "text": "sebagai pembalasan yang setimpal."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5699,
      "verse_number": 27,
      "verse_key": "78:27",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّهُمْ كَانُوا۟ لَا يَرْجُونَ حِسَابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180678,
          "resource_id": 33,
          "text": "Sesungguhnya dahulu mereka tidak pernah mengharapkan perhitungan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5700,
      "verse_number": 28,
      "verse_key": "78:28",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَكَذَّبُوا۟ بِـَٔايَـٰتِنَا كِذَّابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180680,
          "resource_id": 33,
          "text": "dan mereka benar-benar mendustakan ayat-ayat Kami."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5701,
      "verse_number": 29,
      "verse_key": "78:29",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَكُلَّ شَىْءٍ أَحْصَيْنَـٰهُ كِتَـٰبًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180681,
          "resource_id": 33,
          "text": "Dan segala sesuatu telah Kami catat dalam suatu Kitab (buku catatan amalan manusia)."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5702,
      "verse_number": 30,
      "verse_key": "78:30",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 520,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "فَذُوقُوا۟ فَلَن نَّزِيدَكُمْ إِلَّا عَذَابًا",
      "page_number": 582,
      "juz_number": 30,
      "translations": [
        {
          "id": 180684,
          "resource_id": 33,
          "text": "Maka karena itu rasakanlah! Maka tidak ada yang akan Kami tambahkan kepadamu selain azab."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5703,
      "verse_number": 31,
      "verse_key": "78:31",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّ لِلْمُتَّقِينَ مَفَازًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180685,
          "resource_id": 33,
          "text": "Sungguh, orang-orang yang bertakwa mendapat kemenangan,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5704,
      "verse_number": 32,
      "verse_key": "78:32",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "حَدَآئِقَ وَأَعْنَـٰبًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180691,
          "resource_id": 33,
          "text": "(yaitu) kebun-kebun dan buah anggur,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5705,
      "verse_number": 33,
      "verse_key": "78:33",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَكَوَاعِبَ أَتْرَابًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180686,
          "resource_id": 33,
          "text": "dan gadis-gadis belia yang sebaya,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5706,
      "verse_number": 34,
      "verse_key": "78:34",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "وَكَأْسًا دِهَاقًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180687,
          "resource_id": 33,
          "text": "dan gelas-gelas yang penuh (berisi minuman)."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5707,
      "verse_number": 35,
      "verse_key": "78:35",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "لَّا يَسْمَعُونَ فِيهَا لَغْوًا وَلَا كِذَّٰبًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180688,
          "resource_id": 33,
          "text": "Di sana mereka tidak mendengar percakapan yang sia-sia maupun (perkataan dusta)."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5708,
      "verse_number": 36,
      "verse_key": "78:36",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "جَزَآءً مِّن رَّبِّكَ عَطَآءً حِسَابًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180689,
          "resource_id": 33,
          "text": "Sebagai balasan dan pemberian yang cukup banyak dari Tuhanmu,"
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5709,
      "verse_number": 37,
      "verse_key": "78:37",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "رَّبِّ ٱلسَّمَـٰوَٰتِ وَٱلْأَرْضِ وَمَا بَيْنَهُمَا ٱلرَّحْمَـٰنِ ۖ لَا يَمْلِكُونَ مِنْهُ خِطَابًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180690,
          "resource_id": 33,
          "text": "Tuhan (yang memelihara) langit dan bumi serta apa yang ada di antara keduanya; Yang Maha Pengasih, mereka tidak mampu berbicara dengan Dia."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5710,
      "verse_number": 38,
      "verse_key": "78:38",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "يَوْمَ يَقُومُ ٱلرُّوحُ وَٱلْمَلَـٰٓئِكَةُ صَفًّا ۖ لَّا يَتَكَلَّمُونَ إِلَّا مَنْ أَذِنَ لَهُ ٱلرَّحْمَـٰنُ وَقَالَ صَوَابًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180692,
          "resource_id": 33,
          "text": "Pada hari, ketika rūḥ<sup foot_note=135845>1</sup> dan para malaikat berdiri bersaf-saf, mereka tidak berkata-kata, kecuali siapa yang telah diberi izin kepadanya oleh Tuhan Yang Maha Pengasih dan dia hanya mengatakan yang benar."
        }
      ],
      "foot_notes": [
        {
          "foot_note": {
            "id": 135845,
            "text": "* Para mufasir mempunyai pendapat yang berbeda tentang maksud \"rūḥ\" dalam ayat ini. Ada yang mengatakan \"Jibril\" ada yang mengatakan \"tentara Allah\" dan ada pula yang mengatakan \"roh manusia.\"",
            "language_name": "indonesian",
            "language_id": 67
          }
        }
      ]
    },
    {
      "id": 5711,
      "verse_number": 39,
      "verse_key": "78:39",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "ذَٰلِكَ ٱلْيَوْمُ ٱلْحَقُّ ۖ فَمَن شَآءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَـَٔابًا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180693,
          "resource_id": 33,
          "text": "Itulah hari yang pasti terjadi. Maka barangsiapa menghendaki, niscaya dia menempuh jalan kembali kepada Tuhannya."
        }
      ],
      "foot_notes": []
    },
    {
      "id": 5712,
      "verse_number": 40,
      "verse_key": "78:40",
      "hizb_number": 59,
      "rub_el_hizb_number": 233,
      "ruku_number": 521,
      "manzil_number": 7,
      "sajdah_number": null,
      "text_uthmani": "إِنَّآ أَنذَرْنَـٰكُمْ عَذَابًا قَرِيبًا يَوْمَ يَنظُرُ ٱلْمَرْءُ مَا قَدَّمَتْ يَدَاهُ وَيَقُولُ ٱلْكَافِرُ يَـٰلَيْتَنِى كُنتُ تُرَٰبًۢا",
      "page_number": 583,
      "juz_number": 30,
      "translations": [
        {
          "id": 180696,
          "resource_id": 33,
          "text": "Sesungguhnya Kami telah memperingatkan kepadamu (orang kafir) azab yang dekat, pada hari manusia melihat apa yang telah diperbuat oleh kedua tangannya; dan orang kafir berkata, \"Alangkah baiknya seandainya dahulu aku jadi tanah.\""
        }
      ],
      "foot_notes": []
    }
  ]
}